<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarillo"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_IPServer"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="192.168.0.5" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puerto: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_Puerto"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="5001" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_Conectar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conectar al Servidor" />

            <Button
                android:id="@+id/btn_Desconectar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="false"
                android:text="Desconectar" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servidor:"
            android:textSize="20dp" />

      

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            </LinearLayout>

        

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_PlcNum"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:text="Mensaje:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edit_MensajeCliente"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="hola"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_EnviarMensaje"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="Enviar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status" />

        <TextView
            android:id="@+id/text_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desconectado" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:fillViewport="true"  >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_MensajeServer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
