<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarillo"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispositivo 1"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IP:"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edit_IPServer"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="192.168.0.5" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/text_valorBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puerto: "
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edit_puerto"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:text="5001" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btn_Conectar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conectar" />

                <Button
                    android:id="@+id/btn_Desconectar"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.55"
                    android:enabled="false"
                    android:text="Desconectar" />

                <TextView
                    android:id="@+id/textPrueba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prueba" />

                <Button
                    android:id="@+id/btn_Prueba"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prueba" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_PlcNum"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:text="Mensaje:"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/edit_MensajeCliente"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="hola"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_EnviarMensaje"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="Enviar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Desconectado" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor 1:" />

                    <TextView
                        android:id="@+id/textA1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="textview" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor 2" />

                    <TextView
                        android:id="@+id/textA2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor 3:" />

                    <TextView
                        android:id="@+id/textA3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor 4:" />

                    <TextView
                        android:id="@+id/textA4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relay 5" />

                        <ToggleButton
                            android:id="@+id/toggleR1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ToggleButton" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relay 6" />

                        <ToggleButton
                            android:id="@+id/toggleR2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ToggleButton" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relay 7" />

                        <ToggleButton
                            android:id="@+id/toggleR3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ToggleButton" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relay 7" />

                        <ToggleButton
                            android:id="@+id/toggleR4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ToggleButton" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relay 1" />

                        <ToggleButton
                            android:id="@+id/toggleR5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ToggleButton" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relay 2" />

                        <ToggleButton
                            android:id="@+id/toggleR6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ToggleButton" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relay 3" />

                        <ToggleButton
                            android:id="@+id/toggleR7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ToggleButton" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relay 4" />

                        <ToggleButton
                            android:id="@+id/toggleR8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ToggleButton" />
                    </LinearLayout>
                </TableRow>
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                android:fillViewport="true" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/text_MensajeServer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dispositivo:\n" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
