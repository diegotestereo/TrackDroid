<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/fondo1"
    android:orientation="vertical"
    android:padding="7dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CONFIGURACION"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre :"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Edit_Nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Nombre del Dispositivo"
                    android:maxLength="15"
                    android:maxLines="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IP:"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/editIp1"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="192" />

                <TextView
                    android:id="@+id/TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="."
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editIp2"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="168" />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="."
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editIp3"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="0" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="."
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editIp4"
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:text="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Puerto:"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/Edit_Puerto"
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="5"
                    android:text="5001" />
            </LinearLayout>

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Habilitacion de Entradas y Salidas"
                 android:layout_gravity="center"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/dispositivo"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/textA1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sensores" />

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/CheckA1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ent 1" />

                    <CheckBox
                        android:id="@+id/CheckA2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ent 2" />

                    <CheckBox
                        android:id="@+id/CheckA3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ent 3" />

                    <CheckBox
                        android:id="@+id/CheckA4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ent 4" />
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dispositivo"
                android:orientation="vertical"
                android:padding="5dp" >

				<TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Salidas" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" >

                        <CheckBox
                            android:id="@+id/checkRelay1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relé 1" />

                        <CheckBox
                            android:id="@+id/checkRelay2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relé 2" />

                        <CheckBox
                            android:id="@+id/checkRelay3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relé 3" />

                        <CheckBox
                            android:id="@+id/checkRelay4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            
                            android:text="Relé 4" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <CheckBox
                            android:id="@+id/checkRelay5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relé 5" />

                        <CheckBox
                            android:id="@+id/checkRelay6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relé 6" />

                        <CheckBox
                            android:id="@+id/checkRelay7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relé 7" />

                        <CheckBox
                            android:id="@+id/checkRelay8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Relé 8" />
                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_GuardarConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>